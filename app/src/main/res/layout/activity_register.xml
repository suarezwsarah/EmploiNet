<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mba2dna.apps.EmploiNet.activities.ActivityRegister">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/fbl"
        android:layout_marginBottom="60dp"

        >
        <ImageView
            android:id="@+id/head"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/atlogo"
            android:textColor="@color/Tex"
            android:layout_gravity="center"
            /></LinearLayout>

    <LinearLayout
        android:id="@+id/fbl"
        android:layout_above="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rect_normal_facebook"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:elevation="1.5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fb"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up with Facebook"
            android:textSize="@dimen/text"
            android:textColor="@color/White"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_above="@+id/linear"
        android:gravity="center"

        android:textColor="@color/textSub"
        />



    <LinearLayout
        android:layout_above="@+id/signin1"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >


        <android.support.design.widget.TextInputLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">

            <EditText
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:textColorHint="@color/textSub"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="14dp"
                android:gravity="left"
                android:lines="1"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="17dp"
                />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">

            <EditText
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:textColorHint="@color/textSub"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="14dp"
                android:gravity="left"
                android:lines="1"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="12dp"
                />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">



            <EditText

                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:textColorHint="@color/textSub"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="14dp"

                android:inputType="textPassword"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="19dp"


                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <LinearLayout

            android:layout_marginTop="12dp"
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"

            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                >
                <CheckBox
                    android:id="@+id/checkbocremember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="@color/textSub"
                    />
                <TextView

                    android:id="@+id/remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree to the"
                    android:textColor="@color/textSub"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textsub"

                    /></LinearLayout>
            <TextView

                android:id="@+id/forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tandc"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="@dimen/textsub"
                android:gravity="right"
                android:layout_marginLeft="5dp"

                />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_above="@+id/signupline"
        android:id="@+id/signin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_normal"
        android:text="Create Account"
        android:textSize="@dimen/text"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="12dp"
        android:layout_marginBottom="26dp"
        android:elevation="1.5dp" />




    <LinearLayout
        android:id="@+id/signupline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="35dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an account ?"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/textSub"
            android:textSize="@dimen/textsub"
            android:layout_marginRight="3dp"

            />

        <TextView

            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textsub"
            android:layout_marginLeft="3dp"

            />
    </LinearLayout>











</RelativeLayout>




